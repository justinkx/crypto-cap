{
  "build": {
    "production": {
      "env": {
        "APP_ENV": "production"
      },
      "releaseChannel": "production"
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "APP_ENV": "development"
      },
      "releaseChannel": "development",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "buildConfiguration": "Debug",
        "simulator": true
      }
    },
    "preview": {
      "releaseChannel": "staging",
      "distribution": "internal"
    }
  },
  "cli": {
    "version": ">= 0.44.0"
  }
}
